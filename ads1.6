public class PowerAN {
    public static double calculatePower(int a, int n) {
        if (n == 0) {
            return 1;
        } else if (n > 0) {
            double result = 1;
            for (int i = 1; i <= n; i++) {
                result *= a; 
            }
            return result;
        } else {
            return 1 / calculatePower(a, -n);
        }
    }

    public static void main(String[] args) {
        int a = 2;
        int n = 10;
        double result = calculatePower(a, n);
        System.out.println(a + " raised to the power of " + n + " is: " + result);
    }
}
